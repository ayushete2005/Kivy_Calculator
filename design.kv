<MyLayout>
    BoxLayout:
		size: root.width, root.height
		orientation: "vertical"

		TextInput:
			id: input	
			multiline: False
			text: "0"
			halign: "right"
			font_size: 40
			size_hint: (1,0.7)

		BoxLayout:
			orientation: "horizontal"
			size: root.width, root.height
		
			Button:
                font_size:25
				id: Clear
				text: "C"
				on_press: root.clear()
			Button:
                font_size:25
				id: name_label
				text: "%"
				#on_press: root.digit("%")
			Button:
                font_size:25
				id: name_label
				text: "/"
				on_press: root.digit("/")
			Button:
                font_size:25
				id: name_label
				text: "B"
				on_press: root.Backspace()
		BoxLayout:
			orientation: "horizontal"
			size: root.width, root.height
		
			Button:
                font_size:25
				id: name_label
				text: "7"
				on_press: root.digit("7")
				background_color: (157/255,157/255,157/255,1)
			Button:
                font_size:25
				id: name_label
				text: "8"
				on_press: root.digit("8")
				background_color: (157/255,157/255,157/255,1)
			Button:
                font_size:25
				id: name_label
				text: "9"
				on_press: root.digit("9")
				background_color: (157/255,157/255,157/255,1)
			Button:
                font_size:25
				id: name_label
				text: "x"
				on_press: root.digit("*")
		BoxLayout:
			orientation: "horizontal"
			size: root.width, root.height
		
			Button:
                font_size:25
				id: name_label
				text: "4"
				on_press: root.digit("4")
				background_color: (157/255,157/255,157/255,1)
			Button:
                font_size:25
				id: name_label
				text: "5"
				on_press: root.digit("5")
				background_color: (157/255,157/255,157/255,1)
			Button:
                font_size:25
				id: name_label
				text: "6"
				on_press: root.digit("6")
				background_color: (157/255,157/255,157/255,1)
			Button:
                font_size:25
				id: name_label
				text: "-"
				on_press: root.digit("-")
		BoxLayout:
			orientation: "horizontal"
			size: root.width, root.height
		
			Button:
                font_size:25
				id: name_label
				text: "1"
				on_press: root.digit("1")
				background_color: (157/255,157/255,157/255,1)
			Button:
                font_size:25
				id: name_label
				text: "2"
				on_press: root.digit("2")
				background_color: (157/255,157/255,157/255,1)
			Button:
                font_size:25
				id: name_label
				text: "3"
				on_press: root.digit("3")
				background_color: (157/255,157/255,157/255,1)
			Button:
                font_size:25
				id: name_label
				text: "+"
				on_press: root.digit("+")
		BoxLayout:
			orientation: "horizontal"
			size: root.width, root.height
		
			Button:
                font_size:25
				id: name_label
				text: "+/-"
				#on_press: root.Nagative()
				background_color: (157/255,157/255,157/255,1)
			Button:
                font_size:25
				id: name_label
				text: "0"
				on_press: root.digit("0")
				background_color: (157/255,157/255,157/255,1)
			Button:
                font_size:25
				id: name_label
				text: "."
				on_press: root.dot()
				background_color: (157/255,157/255,157/255,1)
			Button:
                font_size:25
				id: name_label
				text: "="
				on_press: root.Result()
				


